# ───────────────
# Runtime
# ───────────────
# development | production | test
NODE_ENV=development

# App port
PORT=3000

# Pino log level: trace | debug | info | warn | error | fatal
LOG_LEVEL=info

# ───────────────
# Database (Prisma / PostgreSQL example)
# ───────────────
# Format: postgresql://USER:PASSWORD@HOST:PORT/DBNAME?schema=public
DATABASE_URL=postgresql://postgres:password@localhost:5432/mydb

# Enable Prisma query logs in dev if needed: "true" or leave unset
# PRISMA_LOG_QUERIES=true

# ───────────────
# JWT
# ───────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=50e52f6522b171190e95448f13cf25cfa4496b87e5fdf7cba471b2e9aba05533
JWT_REFRESH_SECRET=0c0960bb886411654a9696f5328507dfdb8c52249c5526c337836de5a1cc97bf

# Token lifetimes
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ───────────────
# Password hashing
# ───────────────
BCRYPT_ROUNDS=10

# ───────────────
# Email (SMTP) — optional
# Provide either SERVICE or (HOST + PORT), plus USER/PASS
# ───────────────
# Common service names: 'Gmail', 'SendGrid', 'Mailgun', etc.
# SMTP_SERVICE=

# Example: Gmail SMTP (App Password required)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ───────────────
# File uploads
# ───────────────
# Max file size in bytes (default 5MB = 5242880)
MAX_FILE_SIZE=5242880

# ───────────────
# CORS / Frontend
# ───────────────
# Set to your frontend origin (include protocol and port)
# Example: http://localhost:3001 or https://app.example.com
FRONTEND_URL=http://localhost:3001
